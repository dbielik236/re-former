<%= form_with model: @user do |form| %>
    <%= form.label "Username"%>
    <%= form.text_field :username, placeholder: "anyperson123"%>

    <%= form.label "Email"%>
    <%= form.email_field :email, placeholder: "aperson123@gmail.com" %>

    <%= form.label "Password"%>
    <%= form.password_field :password, value: "SuperSecurePassword"  %>

    <%= form.submit "Update" %>
